class Solution {
public:
    string removeStars(string s) {
       
        stack<char> stk;
        int sz = s.size();  

        for (int i = 0; i < sz; i++)
        {
            if (s[i] != '*')
                stk.push(s[i]);
            else if (!stk.empty())
                stk.pop();
        }

        int n = stk.size();
        string ans(n, ' ');  
        for (int i = n - 1; i >= 0; i--)
        {
            ans[i] = stk.top();
            stk.pop();
        }

        return ans;
    }
};
